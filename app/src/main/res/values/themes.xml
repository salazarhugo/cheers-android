<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cheers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:dialogTheme">@style/Theme.DialogFullScreen</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Theme.Cheers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cheers.SignIn">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DialogFullScreen" parent="Theme.Material3.DayNight.Dialog">
<!--        <item name="android:statusBarColor">@android:color/black</item>-->
<!--        <item name="android:windowMinWidthMajor">100%</item>-->
<!--        <item name="android:windowMinWidthMinor">100%</item>-->
    </style>

    <style name="Theme.Cheers.Slide" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.Cheers.Starting" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_artboard_1cheers_logo_svg</item>
        <item name="windowSplashScreenAnimationDuration">20</item>
        <item name="postSplashScreenTheme">@style/Theme.Cheers</item>
    </style>
</resources>
