<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows us to override night specific attributes in the
        values-night folder. -->
    <style name="NightAdjusted.Theme.Cheers" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.Cheers" parent="NightAdjusted.Theme.Cheers" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.Cheers">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Cheers.Splash">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/cheers_logo_avd</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Cheers</item>
    </style>
</resources>
